---
layout: base.njk
title: AI Tools Masterlist
---
<section class="">
    <div class="pt-16">
    <form class="px-[30%]" onsubmit="return false;">
        <input 
            id="search-input" 
            class="border border-white w-[100%] px-4 italic rounded-3xl py-2 bg-transparent text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-amber-300" 
            type="text" 
            placeholder="Search the tools you need."
            aria-label="Search AI tools"
        >
    </form>

    <div id="search-results" class=" container mx-auto grid grid-cols-5 pt-8 gap-6"></div>
    
</div>
    <div id="original-content" class="container mx-auto mt-16 bg-gray-800">
        
        <div class="container mx-auto mt-8">
            <ul class="grid grid-cols-5 gap-6 mx-auto">
                {% for col in collections.col  %}
              
                <a href="{{col.url}}">
                    <li class="border border-gray-700 rounded-3xl p-4">
                        <img src="{{col.data.image}}" alt="" class="w-18">
                        <p class="text-xl font-medium mt-4 text-amber-300">{{col.data.title}}</p>
                        <p class="line-clamp-3 mt-4 text-gray-500">{{col.data.description}}</p>
                        <p class="text-xl font-medium mt-4 text-green-300">{{col.data.type}}</p>

                    </li>
                </a>
               
                {% endfor %}
            </ul>
        </div>
    </div>
</section>